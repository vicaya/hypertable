import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import HqlService
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  HqlResult hql_exec(string command, bool noflush, bool unbuffered)'
  print '  HqlResult hql_query(string command)'
  print '  HqlResult2 hql_exec2(string command, bool noflush, bool unbuffered)'
  print '  HqlResult2 hql_query2(string command)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':') 
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':') 
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = HqlService.Client(protocol)
transport.open()

if cmd == 'hql_exec':
  if len(args) != 3:
    print 'hql_exec requires 3 args'
    sys.exit(1)
  pp.pprint(client.hql_exec(args[0],eval(args[1]),eval(args[2]),))

elif cmd == 'hql_query':
  if len(args) != 1:
    print 'hql_query requires 1 args'
    sys.exit(1)
  pp.pprint(client.hql_query(args[0],))

elif cmd == 'hql_exec2':
  if len(args) != 3:
    print 'hql_exec2 requires 3 args'
    sys.exit(1)
  pp.pprint(client.hql_exec2(args[0],eval(args[1]),eval(args[2]),))

elif cmd == 'hql_query2':
  if len(args) != 1:
    print 'hql_query2 requires 1 args'
    sys.exit(1)
  pp.pprint(client.hql_query2(args[0],))

transport.close()
